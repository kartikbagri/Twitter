<!-- Main-Layout File -->



<!-- Variables needed to render the page -->
<!-- pageTitle: For displaying page title -->
<!-- htmlContent: For different things to be displayed on home, search, notifications etc. -->



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#000000">
    <script src="https://kit.fontawesome.com/7caf9c456e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/main.css">
    <title> <%= pageTitle %>  </title>
    <script>
        const userLoggedIn = '<%- JSON.stringify(locals.userLoggedIn) %>';
    </script>
</head>
<body>
    <nav class="navbar">
        <a class="nav-link twitter-logo" href="/">
            <i class="fab fa-twitter"></i>
        </a>
        <a class="nav-link active" href="/">
            <i class="fas fa-home"></i>
        </a>
        <a class="nav-link" href="/search">
            <i class="fas fa-search"></i>
        </a>
        <a class="nav-link" href="/notifications">
            <i class="fas fa-bell"></i>
        </a>
        <a class="nav-link" href="/messages">
            <i class="fas fa-envelope"></i>
        </a>
        <a class="nav-link" href="/profile">
            <i class="fas fa-user"></i>
        </a>
        <a class="nav-link" href="/logout">
            <i class="fas fa-sign-out-alt"></i>
        </a>
    </nav>
    <div class="content-container">
        <h1 class="page-title"> <%= pageTitle %>  </h1>
        <%- locals.mainContent %> 
    </div>
    <div class="highlights-container">
        
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <% locals.jsfiles.forEach(function(file) { %> 
        <script src="<%= file %> "></script>
    <% }) %> 
</body>
</html>